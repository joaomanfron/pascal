program piramide_de_lado;
uses crt;
var coluna, totalLinhas, linhaAtual : integer ;
begin
totalLinhas := 8;
    for linhaAtual := 0 to totalLinhas do
    begin
        for coluna := 0 to totalLinhas - 4 do 
            if (coluna > totalLinhas - linhaAtual) or (linhaAtual < coluna)then
                write ('.')
            else
                write ('x');
        writeln ( );
    end;
end.
