variaveis:
    numero_randomico, numero_da_pessoa
    
nrs = sorteie 0,100

frase1="insira um numero de 0 a 100"
frase2="numero correto"
frase3="é maior"
frase4="é menor"

    repita
        Imprima frase1
        leia numero_da_pessoa
        se numero_da_pessoa = numero_randomico
            imprima frase2
        senão
            se numero_da_pessoa > numero_randomico
                imprima frase3
            senão
                imprima frase4
    até que numero_da_pessoa = numero_randomico

imprima "voce acertou o numero parabens"
